<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hr.math.set"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SinglePlayActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_single_play"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name=".MultiPlayActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_multi_play"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name=".NumPlayersActivity"
            android:label="@string/title_activity_num_players"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name=".StatisticsActivity"
            android:label="@string/title_activity_statistics"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name=".SingleResultsActivity"
            android:label="@string/title_activity_single_results"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name=".MultiResultsActivity"
            android:label="@string/title_activity_multi_results"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
    </application>

</manifest>